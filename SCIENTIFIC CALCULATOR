//SCIENTIFIC CALCULATOR
//A) BASIC OPERATIONS
#include <stdio.h>

int main() {
    int num1, num2;
    int sum, difference, product;
    float quotient;

    // Getting input from the user
    printf("Enter the first number: ");
    scanf("%d", &num1);

    printf("Enter the second number: ");
    scanf("%d", &num2);

    // Performing the operations
    sum = num1 + num2;
    difference = num1 - num2;
    product = num1 * num2;
    quotient = (float)num1 / num2;

    // Displaying the results
    printf("\n--- Results ---\n");
    printf("Sum: %d\n", sum);
    printf("Difference: %d\n", difference);
    printf("Product: %d\n", product);
    printf("Quotient: %.2f\n", quotient);

    return 0;
//TRIGONOMETRIC OPERATIONS
#include <stdio.h>
#include <math.h>

int main() {
    double angle;
    double sine, cosine, tangent;
    double arcsine, arccosine, arctangent;

    // Getting input from the user
    printf("Enter the angle in degrees: ");
    scanf("%lf", &angle);

    // Converting angle from degrees to radians
    double radian = angle * M_PI / 180.0;

    // Performing the trigonometric operations
    sine = sin(radian);
    cosine = cos(radian);
    tangent = tan(radian);
    arcsine = asin(sine);
    arccosine = acos(cosine);
    arctangent = atan(tangent);

    // Displaying the results
    printf("\n--- Results ---\n");
    printf("Sine: %.4lf\n", sine);
    printf("Cosine: %.4lf\n", cosine);
    printf("Tangent: %.4lf\n", tangent);
    printf("Arcsine: %.4lf\n", arcsine);
    printf("Arccosine: %.4lf\n", arccosine);
    printf("Arctangent: %.4lf\n", arctangent);

    return 0;
}

